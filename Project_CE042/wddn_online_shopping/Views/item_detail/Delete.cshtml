@model wddn_online_shopping.Models.model_class.item_detail

@Html.Partial("_partial_view", "seller");

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>item_detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_image)
        </dt>
        <dd class="col-sm-10">
            @{var product_image_path = "/product_image/" + Model.product_image;
            }
            <img class="card-img-top" style="height:100px;width:100Px" src="@product_image_path" alt="Card image cap">

        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="product_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Homepage" asp-controller="sellers" class=" btn btn-success">Back to List</a>
    </form>
</div>
